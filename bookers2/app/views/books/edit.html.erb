<h1>Editing Book</h1>
<%= form_with model:@user, local:true do |f| %>
  <!-- URLをルートパスにしたい-->
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book', class: "btn btn-success" %><br>
  <!--ボタンの色が変わらない、なぜ → application.html.erbを適用させていなかった-->
  <%= link_to "Show", book_path %>
  |
  <%= link_to "Back", books_path %>
<% end %>